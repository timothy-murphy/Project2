#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <errno.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>
#define MAX 1024
#define DELIMS " \t\r\n"

int main(int argc, char *argv[]) {
char *cmd;
char cmd_line[MAX];

while (1) {
printf("$");
if (!fgets(cmd_line, MAX, stdin)) break;
argv[0] = cmd_line;

if ((cmd = strtok(cmd_line, DELIMS))) { //exicution of command
errno = 0;
if(fork() == 0) {
if (strcmp(cmd, "cd") == 0) {
char *arg = strtok(0, DELIMS);
if (!arg)
fprintf(stderr, "cd missing argument.\n");
else
chdir(arg);
} else if (strcmp(cmd, "exit") == 0) { //if exit break loop and come out
exit(0); //exit fork
break;

}
else {
execvp(argv[0],argv); //exicute command
}
exit(0); //exit child

}
else
{
wait(0); //wait until child complite it exicution
}

if (errno) //if there is error print command faild
perror("Command failed");
}
}

return 0;
}

